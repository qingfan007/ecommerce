services:
  mysql:
    image: mysql:8.0
    networks:
      - app-network  # 关键：所有服务共享同一网络
    container_name: mysql
    command: --default-authentication-plugin=mysql_native_password  # 强制使用旧插件
    environment:
      MYSQL_ROOT_PASSWORD: password
      MYSQL_DATABASE: ecommerce_db
    ports:
      - "3306:3306"
    volumes:
      - db-data:/var/lib/mysql
    healthcheck:  # 新增健康检查
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 5s
      timeout: 3s
      retries: 10

  postgres:
    image: postgres:13
    networks:
      - app-network  # 关键：所有服务共享同一网络
    container_name: postgres
    ports:
      - "5432:5432"
    environment:
      POSTGRES_DB: ecommerce_pg
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: password
    volumes:
      - pg-data:/var/lib/postgresql/data
    healthcheck:
      test: [ "CMD-SHELL", "pg_isready -U postgres -d pgdb" ]
      interval: 5s
      timeout: 3s
      retries: 10

  app:
    build: .
    depends_on:
      mysql:
        condition: service_healthy  # wait for MySQL healthy status
      postgres:
        condition: service_healthy  # wait for PostgreSQL healthy status
    ports:
      - "8080:8080"
    networks:
      - app-network
    environment:
      SPRING_DATASOURCE_URL: jdbc:mysql://mysql:3306/ecommerce_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
      SPRING_DATASOURCE_USERNAME: root
      SPRING_DATASOURCE_PASSWORD: password

      SPRING_DATASOURCE_POSTGRES_URL: jdbc:postgresql://postgres:5432/ecommerce_pg
      SPRING_DATASOURCE_POSTGRES_USERNAME: postgres
      SPRING_DATASOURCE_POSTGRES_PASSWORD: password

volumes:
  db-data:
  pg-data:

networks:
  app-network:
    driver: bridge